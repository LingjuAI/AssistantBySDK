<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
       <layer-list>
		    <item>  
		        <shape android:shape="rectangle">
				    <corners
				        android:radius="3dp"/>
				    <solid android:color="#464646" />
				    <stroke 
				        android:width="1dp" 
				        android:color="@color/green_style"/>
			   </shape>  
		    </item> 
		 </layer-list>
    </item>
   <item>
       <layer-list>
		    <item>  
		        <shape android:shape="rectangle">
				    <corners
				        android:radius="3dp"/>
				    <solid android:color="#00000000" />
				    <stroke 
				        android:width="1dp" 
				        android:color="@color/green_style"/>
			   </shape>  
		    </item> 
		 </layer-list>
    </item>
</selector>