<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1px" android:top="1px" android:right="1px" android:bottom="-2px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/base_blue_qtr_transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="1px" android:top="1px" android:right="1px" android:bottom="-2px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/new_main_bgcolor"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>