<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="-47dp">
                <shape android:shape="line">
                    <stroke android:width="2px" android:color="@color/green_style" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="-47dp">
                <shape android:shape="line">
                    <stroke android:width="2px" android:color="@color/green_style" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="-48dp">
                <shape android:shape="line">
                    <stroke android:width="1dp" android:color="#b4b4b4" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>