<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/remind_dialog_white_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_dialog_yellow_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wechat_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="正在登录中..."
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wechat_bottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/login_dialog_btn_layout_bg"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/wechat_close"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_margin="4dp"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/new_text_color_first"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>