<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:elevation="2dp"
    android:background="@color/new_main_bgcolor"
    >
    <RelativeLayout
        android:id="@+id/record_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/selector_view_bg">

        <ImageButton
            android:id="@+id/search_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/search_black"
            android:alpha="0.54"
            android:background="@null"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/record_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_image"
            android:paddingRight="@dimen/base_margin_padding"
            android:maxLines="1"
            android:text="出发地"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/record_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_toRightOf="@+id/record_start"
            android:background="@drawable/ic_right_white"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/record_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的地"
            android:paddingLeft="@dimen/base_margin_padding"
            android:paddingRight="@dimen/normal_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/record_image"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_line_black_border"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="48dp"
        />

</RelativeLayout>