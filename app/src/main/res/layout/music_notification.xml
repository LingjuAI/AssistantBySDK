<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="#b233a868"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" 
        android:background="#00000000"
        >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/ic_launcher" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="64dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:orientation="horizontal" 
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="传奇"
                android:textColor="@color/white"
                android:textSize="@dimen/md_big" />

            <TextView
                android:id="@+id/notice_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="刘德华"
                android:textColor="@color/new_main_bgcolor"
                android:textSize="@dimen/md_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" >

            <ImageButton
                android:id="@+id/notice_switch"
                android:layout_width="@dimen/biggest_margin"
                android:layout_height="@dimen/biggest_margin"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_white_circle_view_bg"
                android:src="@drawable/pause" />

            <ImageButton
                android:id="@+id/notice_next"
                android:layout_width="@dimen/biggest_margin"
                android:layout_height="@dimen/biggest_margin"
                android:layout_gravity="center_vertical"
                android:src="@drawable/next"
                android:background="@drawable/selector_white_circle_view_bg"
                />

            <ImageButton
                android:id="@+id/notice_close"
                android:layout_width="@dimen/biggest_margin"
                android:layout_height="@dimen/biggest_margin"
                android:layout_gravity="center_vertical"
                android:src="@drawable/cancel"
                android:background="@drawable/selector_white_circle_view_bg"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>