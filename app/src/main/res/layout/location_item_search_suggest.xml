<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_view_bg">
                <TextView
                    android:id="@+id/loc_item_favorite_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:paddingTop="8dp"
                    android:textColor="@color/new_text_color_first"
                    android:textSize="@dimen/regular"
                    android:singleLine="true"
                    android:text="广州市火车站"
                    android:gravity="left|center"
                    />
                <TextView
                    android:id="@+id/loc_item_favorite_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:paddingTop="8dp"
                    android:layout_below="@+id/loc_item_favorite_name_text"
                    android:textColor="@color/new_text_color_second"
                    android:textSize="@dimen/md_small"
                    android:singleLine="true"
                    android:visibility="visible"
                    android:gravity="left|top"
                    android:text="广州市越秀区"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:background="@color/new_line_black_border"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
</LinearLayout>