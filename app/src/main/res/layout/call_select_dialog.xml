<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_green_border"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/call_select_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:text="请选择"
            android:gravity="center_vertical|left"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/green_style"
            android:textSize="@dimen/bigger" />

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/card_close_btn" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:padding="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:ellipsize="end"
        android:background="#f9f9f9"
        android:textColor="@color/new_text_color_first"
        android:textSize="@dimen/bigger" />
    <!-- <include layout="@layout/lingju_check_list_box_item"/> -->

</LinearLayout>