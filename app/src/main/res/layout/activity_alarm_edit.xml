<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#32c0c4" >

        <ImageButton
            android:id="@+id/aae_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_white_circle_view_bg"
            android:src="@drawable/c_back_down" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_title_margin"
            android:text="闹钟"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        
        <ImageButton
            android:id="@+id/aae_del"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_title_del_bg"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="8dp"
            android:text="时间:"
            android:textColor="@color/new_text_color_first"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aae_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:clickable="true"
        	android:background="@drawable/press"
            android:text="09:10"
            android:textColor="@color/new_text_color_first"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/new_line_black_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="8dp"
            android:text="重复:"
            android:textColor="@color/new_text_color_first"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aae_fr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:clickable="true"
        	android:background="@drawable/press"
            android:text="仅一次"
            android:textColor="@color/new_text_color_first"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/new_line_black_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="铃声:"
            android:textColor="@color/account_text"
            android:textSize="14sp"
            android:paddingRight="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aae_ring"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:clickable="true"
        	android:background="@drawable/press"
            android:text="默认"
            android:textColor="@color/account_text"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/new_line_black_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/aae_cancel"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1.0"
            android:background="@drawable/common_red_btn"
            android:gravity="center"
            android:text="取消"
            android:textColor="@drawable/text_color_red_to_white"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/aae_confirm"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1.0"
            android:background="@drawable/common_green_btn"
            android:gravity="center"
            android:text="保存"
            android:textColor="@drawable/text_color_green_to_white"
            android:textSize="@dimen/small" />
    </LinearLayout>

</LinearLayout>