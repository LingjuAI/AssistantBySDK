<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="提醒"
            android:textColor="@color/green_style"
            android:textSize="@dimen/bigger" />

        <ImageView
            android:id="@+id/red_close"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_view_bg"
            android:paddingRight="4dp"
            android:src="@drawable/card_close_btn" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/green_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingRight="8dp"
                android:text="内容:"
                android:textColor="@color/account_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/red_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                style="@style/edit_text_style"
                android:background="@drawable/press"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:hint="添加提醒内容"
                android:textColor="@color/account_text"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/new_line_black_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingRight="8dp"
                android:text="时间:"
                android:textColor="@color/account_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/red_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/press"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:text="09:10"
                android:textColor="@color/account_text"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/new_line_black_border" />

        <LinearLayout
            android:id="@+id/red_date_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingRight="8dp"
                    android:text="重复:"
                    android:textColor="@color/account_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/red_fr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/press"
                    android:clickable="true"
                    android:gravity="center_vertical|left"
                    android:text="仅一次"
                    android:textColor="@color/account_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/new_line_black_border" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:paddingRight="8dp"
                    android:text="日期:"
                    android:textColor="@color/account_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/red_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/press"
                    android:clickable="true"
                    android:gravity="center_vertical|left"
                    android:text="2015年03月03日"
                    android:textColor="@color/account_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/red_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@color/account_text"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/new_line_black_border" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_card_btn_margin_top"
        android:background="@drawable/common_dialog_bottom_bg"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/red_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_card_btn_height"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@drawable/new_common_cancel_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />

        <TextView
            android:id="@+id/red_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_card_btn_height"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@drawable/new_common_correct_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/medium" />
    </LinearLayout>

</LinearLayout>