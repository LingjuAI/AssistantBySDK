<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/new_main_bgcolor"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/history_location_item"
        android:clickable="true"
        android:background="@drawable/selector_view_bg">
        <ImageButton
            android:id="@+id/clock"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:alpha="0.54"
            android:background="#00000000"
            android:src="@drawable/clock"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/clock">
            <TextView
                android:id="@+id/location_item_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6.0"
                android:textColor="@color/new_text_color_first"
                android:textSize="@dimen/regular"
                android:singleLine="true"
                android:text="广州市火车站"
                android:gravity="left|center"
                />
            <TextView
                android:id="@+id/location_item_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:textColor="@color/new_text_color_second"
                android:textSize="@dimen/md_small"
                android:singleLine="true"
                android:gravity="left|top"
                android:text="广州市越秀区"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/new_line_black_border"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>