<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_margin"
        android:paddingRight="@dimen/normal_margin"
        android:background="@drawable/selector_view_bg"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/edit_line_text"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1.0"
        android:gravity="left|center_vertical"
        android:text="红包"
        android:textColor="@color/new_text_color_first"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/item_edit_line_box"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >

        <!--<View-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="36dp"-->
            <!--android:background="@color/new_line_border" />-->

        <ImageButton
            android:id="@+id/iel_edit"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_circle_view_bg"
            android:src="@drawable/edit"
            android:alpha="0.54"/>

        <ImageButton
            android:id="@+id/iel_del"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:background="@drawable/selector_circle_view_bg"
            android:src="@drawable/delete_black"
            android:alpha="0.54"/>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_line_black_border"/>

</LinearLayout>